@{
    ViewData["Title"] = "Cập nhật bảng điểm";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@model DiemSo
<div class="ms-2 mx-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="DiemSo" asp-action="Edit" asp-route-id="@Model.DiemSoID"
          method="post" class="mt-3" novalidate>
        <input type="hidden" asp-for="DiemSoID" /> 
        <input type="hidden" asp-for="MonHocID" /> 
        <input type="hidden" asp-for="HocSinhId" /> 
        
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="DiemHeSo1_1" class="col-sm-2 col-form-label">Điểm hệ số 1(1)</label> 
            <div class="col-sm-10">
                <div class="form-floating">
                    <input asp-for="DiemHeSo1_1" class="form-control" placeholder="DiemHeSo1_1" require pattern="[0-9]+">
                    <label for="DiemHeSo1_1">Điểm hệ số 1(1)</label>
                    <div class="invalid-feedback">Nhập số!</div>
                </div>
            </div>
        
            <span asp-validation-for="DiemHeSo1_1" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="DiemHeSo1_2" class="col-sm-2 col-form-label">Điểm hệ số 1(2)</label> 
            <div class="col-sm-10">
                <div class="form-floating">
                    <input asp-for="DiemHeSo1_2" class="form-control" placeholder="DiemHeSo1_2" pattern="[0-9]+">
                    <label for="DiemHeSo1_2">Điểm hệ số 1(2)</label>
                    <div class="invalid-feedback">Nhập số!</div>
                </div>
            </div>
        
            <span asp-validation-for="DiemHeSo1_2" class="text-danger"></span>
        </div>
       
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="DiemHeSo1_3" class="col-sm-2 col-form-label">Điểm hệ số 1(3)</label> 
            <div class="col-sm-10">
               <div class="form-floating">
                    <input asp-for="DiemHeSo1_3" class="form-control" placeholder="DiemHeSo1_3" pattern="[0-9]+">
                    <label for="DiemHeSo1_3">Điểm hệ số 1(3)</label>
                    <div class="invalid-feedback">Nhập số!</div>
                </div>
            </div>
            <span asp-validation-for="DiemHeSo1_3" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="DiemHeSo2_1" class="col-sm-2 col-form-label">Điểm hệ số 2(1)</label> 
            <div class="col-sm-10">
                <div class="form-floating">
                    <input asp-for="DiemHeSo2_1" class="form-control" placeholder="DiemHeSo2_1" pattern="[0-9]+">
                    <label for="DiemHeSo2_1">Điểm hệ số 2(1)</label>
                    <div class="invalid-feedback">Nhập số!</div>
                </div>
            </div>
            <span asp-validation-for="DiemHeSo2_1" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="DiemHeSo2_2" class="col-sm-2 col-form-label">Điểm hệ số 2_2</label> 
            <div class="col-sm-10">
                <div class="form-floating">
                    <input asp-for="DiemHeSo2_2" class="form-control" placeholder="DiemHeSo2_2" pattern="[0-9]+">
                <label for="DiemHeSo2_2">Điểm hệ số 2(2)</label>
                    <div class="invalid-feedback">Nhập số!</div>
                </div>
            </div>
            <span asp-validation-for="DiemHeSo2_2" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="DiemHeSo3" class="col-sm-2 col-form-label">Điểm hệ số 3</label> 
            <div class="col-sm-10">
                <div class="form-floating">
                    <input asp-for="DiemHeSo3" class="form-control" placeholder="DiemHeSo3" pattern="[0-9]+">

                    <label for="DiemHeSo3">Điểm hệ số 3</label>
                    <div class="invalid-feedback">Nhập số!</div>
                </div>
            </div>
            <span asp-validation-for="DiemHeSo3" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary"> Sửa</button>
            </div>
        </div>
    </form>
</div>
<script>
    const form = document.querySelector("form");
    form.addEventListener('submit', e => {
        if (!form.checkValidity()) {
            e.preventDefault()
        }
        form.classList.add('was-validated')
    })
</script>


