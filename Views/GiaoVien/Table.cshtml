@{
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Stt</th>
            <th>Họ và tên</th>
            <th>Giới tính</th>
            <th>Ngày sinh</th>
            <th>Môn học</th>
            <th>Ghi chú</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.GiaoVienID</td>
                <td>@s.HoVaTen</td>
                @{
                    var GioiTinh = "";
                }
                @if (s.Nu) { GioiTinh = "Nữ"; } else { GioiTinh = "Nam"; }
                <td>@GioiTinh</td>
                <td>@s.NgaySinh</td>
                <td>@s.MonHoc.TenMon</td>
                <td>@s.GhiChu</td>
                <td>|</td>
                <td> <a asp-controller="ChiTietGiangDay" asp-action="Index" asp-route-giaovienid="@s.GiaoVienID">Chi tiết giảng dạy</a> |  <a asp-action="Edit" asp-route-id="@s.GiaoVienID">Edit</a> | <a asp-action="Delete" asp-route-id="@s.GiaoVienID">Delete</a></td>
            </tr>
        }
    </tbody>
</table>