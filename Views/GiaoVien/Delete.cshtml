@{
    ViewData["Title"] = "Xóa giáo viên ";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@model GiaoVien
<div class="ms-2 mx-2">

    <h3>Are you sure you want to delete this?</h3>

    <hr />
    <dl class="row list-group list-group-flush">
        <div class="list-group-item list-group-item-action">
            <dt class="col-sm-2 ">
                <div class="bg-gradient">Họ và tên</div>
            </dt>
            <dd class="col-sm-10 ">
                @Html.DisplayFor(model => model.HoVaTen)
            </dd>
        </div>
        
        <div class="list-group-item list-group-item-action">
            <dt class="col-sm-2">
                <div class="bg-gradient">Lớp học</div>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MonHoc.MonHocID)
            </dd>
        </div>
        <div class="list-group-item list-group-item-action">
            <dt class="col-sm-2">
                <div class="bg-gradient">Ngày sinh</div>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NgaySinh)
            </dd>
        </div>
        <div class="list-group-item list-group-item-action">
            <dt class="col-sm-2">
                <div class="bg-gradient">Nữ</div>
            </dt>
            <dd class="col-sm-10">
                @{
                    if (Model.Nu)
                    {
                        <div>True</div>
                    }
                    else
                    {
                        <div>False</div>
                    }
                }
            </dd>
        </div>
        <div class="list-group-item list-group-item-action">
            <dt class="col-sm-2">
                <div class="bg-gradient">Ghi chú</div>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GhiChu)
            </dd>
        </div>
    </dl>
    <form asp-action="Delete">
        <div class="d-grid gap-2 d-md-block">
            <input type="hidden" asp-for="@Model.Id" />
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            <a class="btn btn-primary" asp-action="Index" >Quay lại</a>
        </div>
    </form>
</div>
