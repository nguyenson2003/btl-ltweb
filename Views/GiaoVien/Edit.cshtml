@{
    ViewData["Title"] = "Cập nhật giáo viên";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@model GiaoVien
<div class="ms-2 mx-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="GiaoVien" asp-action="Edit" asp-route-id="@Model.Id"
          method="post" class="mt-3" novalidate>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="GiaoVienID" />
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="HoVaTen" class="col-sm-2 col-form-label">Họ và tên</label>
            <div class="col-sm-10">
                <div class="form-floating">
                    <input asp-for="HoVaTen" class="form-control " placeholder="Ho" , id="HoVaTen" required pattern="[a-zA-Z]{4,20}">
                    <label for="HoVaTen" class="form-label">Họ và Tên</label>
                    <div class="invalid-feedback">Tên không chính xác</div>
                </div>
            </div>
            <span asp-validation-for="HoVaTen" class="text-danger"></span>
        </div>
        
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="MonHocID" class="col-sm-2 col-form-label">Lớp học</label> <div class="col-sm-10">
                <select asp-for="MonHocID" class="custom-select mr-smi-2" asp-items="@ViewBag.MonHocID"></select>
            </div>
        </div>
        <span asp-validation-for="MonHocID" class="text-danger"></span>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="NgaySinh" class="col-sm-2 col-form-label">Ngày sinh</label> <div class=" col-sm-10">
                <input asp-for="NgaySinh" class="form-control" required/>
                <div class="invalid-feedback">Ngày tháng không được bỏ trống</div>
            </div>
            <span asp-validation-for="NgaySinh" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Nu" class="col-sm-2 col-form-label">Nữ</label>
            <div class="col-sm-10">
                <div class="form-check form-check-inline">
                    <input asp-for="Nu" type="radio" class="form-check-input" id="radio1" name="Nu" value="true" checked />
                    <label for="radio1" asp-for="Nu" class="form-check-label">True</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="Nu" type="radio" class="form-check-input" id="radio2" name="Nu" value="false" />
                    <label for="radio2" asp-for="Nu" class="form-check-label">False</label>
                </div>
            </div>
            <span asp-validation-for="Nu" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="GhiChu" class="col-sm-2 col-form-label">Ghi chú</label> <div class="col-sm-10">
                <div class="form-floating">
                    <input asp-for="GhiChu" class="form-control form-control-lg" id="GhiChu" placeholder="GhiChu" required pattern="[a-zA-Z0-9.,]+" />
                    <label for="GhiChu">Ghi chú</label>
                    <div class="invalid-feedback">Ghi chú không đúng</div>
                </div>
            </div>
            <span asp-validation-for="GhiChu" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Sửa</button>
            </div>
        </div>
    </form>
</div>
<script>
    const form = document.querySelector("form");
    form.addEventListener('submit', e => {
        if (!form.checkValidity()) {
            e.preventDefault()
        }
        form.classList.add('was-validated')
    })
</script>


