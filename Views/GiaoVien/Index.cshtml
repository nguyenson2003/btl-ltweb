@model IEnumerable<GiaoVien>
@{
    ViewData["Title"] = "Giáo Viên";
}
<div class="ms-2 mx-2">
    <div id="content">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Stt</th>
                    <th>Họ và tên</th>
                    <th>Giới tính</th>
                    <th>Ngày sinh</th>
                    <th>Môn học</th>
                    <th>Ghi chú</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.GiaoVienID</td>
                        <td>@s.HoVaTen</td>
                        @{
                            var GioiTinh = "";
                        }
                        @if (s.Nu) { GioiTinh = "Nữ"; } else { GioiTinh = "Nam"; }
                        <td>@GioiTinh</td>
                        <td>@s.NgaySinh</td>
                        <td>@s.MonHoc.TenMon</td>
                        <td>@s.GhiChu</td>
                        <td><a asp-action="Edit" asp-route-id="@s.GiaoVienID">Edit</a> | <a asp-action="Delete" asp-route-id="@s.GiaoVienID">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a asp-action="Create" class="btn btn-primary">Thêm giáo viên</a>
</div>
<li>click me</li>
@section Scripts{
    <script>
        $("li").click(createTable);
        function createTable (e) {
            console.log(1);
            $.ajax({
                url: '@Url.Action("table","GiaoVien")',
                data: { MonHocID: 1 },
                success: function (response) {
                    $("div#content").html(response);
                }
            },);
        }
    </script>
}