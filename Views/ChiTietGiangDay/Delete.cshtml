@{
    ViewData["Title"] = "Xóa chi tiết giảng dạy";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@model ChiTietGiangDay
<div class="ms-2 mx-2">

    <h3>Bạn có muốn xóa chi tiết này?</h3>

    <hr />
    <dl class="row list-group list-group-flush">
        <div class="list-group-item list-group-item-action">
            <dt class="col-sm-2 ">
                <div class="bg-gradient">Lớp học</div>
            </dt>
            <dd class="col-sm-10 ">
                @Html.DisplayFor(model => model.LopId)</dd>
        </div>

        <div class="list-group-item list-group-item-action">
            <dt class="col-sm-2">
                <div class="bg-gradient">Giáo viên</div>
            </dt>
            <dd class="col-sm-10">
                <div>@Model.GiaoVien?.HoVaTen</div>
            </dd>
        </div>
        
    </dl>
    <form asp-action="Delete">
        <div class="d-grid gap-2 d-md-block">
            <input type="hidden" asp-for="@Model.GiaoVienID" />
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            <a class="btn btn-primary" asp-action="Index" asp-route-lopid="@Model.GiaoVienID">Quay lại</a>
        </div>
    </form>
</div>
