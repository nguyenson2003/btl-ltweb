@model IEnumerable<ChiTietGiangDay>
@{
    ViewData["Title"] = "Chi tiết giảng dạy " + ViewBag.GiaoVien;
}
<div class="ms-2 mx-2">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID bảng</th>
                <th>Lớp</th>
                
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.ChiTietGiangDayId</td>
                    <td>@s.LopHocId</td>
                    <td><a asp-action="Delete" asp-route-id="@s.GiaoVien.Id">Xóa</a></td>



                    @* <td><a asp-action="Edit" asp-route-id="@s.LopID">Edit</a> | <a asp-action="Delete" asp-route-id="@s.LopID">Delete</a></td> *@


                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" asp-route-lopid=@ViewBag.GiaoVienID class="btn btn-primary">Thêm chi tiết</a>
   
</div>