@{
    ViewData["Title"] = "Thêm sinh viên lớp " + ViewBag.LopID;
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model HocSinh
<div class="ms-2 mx-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="HocSinh" asp-action="Create" method="post" class="mt-3">
        <div style="margin-top:7px" class="form-group row">
            
            <label asp-for="Ho" class="col-sm-2 col-form-label">Họ</label> 
            <div class="col-sm-10">
                 <div class="form-floating">
                    <input asp-for="Ho" class="form-control " placeholder="Ho", id="Ho">
                    <label for="Ho" class="form-label">Họ</label>
                </div>
            </div>
            <span asp-validation-for="Ho" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px" class="form-group row">
            <label asp-for="Ten" class="col-sm-2 col-form-label">Tên</label> 
            <div class="col-sm-10">
                <div class="form-floating">
                    <input asp-for="Ten" class="form-control" placeholder="Ten" id="Ten"/>
                    <label for="Ten">Tên</label>
                </div>
            </div>
            <span asp-validation-for="Ten" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="LopID" class="col-sm-2 col-form-label">Lớp học</label> 
            <div class="col-sm-10">
               
               @*  <select asp-for="LopID" class="custom-select mr-sm-2" asp-items="@ViewBag.LopID"></select> *@
                    <input asp-for="LopID" class="form-control form-control-lg" value="@ViewBag.LopID" text="@ViewBag.LopID" id="LopID" />
                   
                
            </div>
            <span asp-validation-for="LopID" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="NgaySinh" class="col-sm-2 col-form-label">Ngày sinh</label> 
            <div class="col-sm-10">
                <input asp-for="NgaySinh" type="date" class="form-control form-control-lg" />
            </div>
            <span asp-validation-for="NgaySinh" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Nu" class="col-sm-2 col-form-label">Nữ</label>
            <div class="col-sm-10">
                
                <div class="form-check form-check-inline">
                    <input asp-for="Nu" type="radio" class="form-check-input" id="radio1" name="Gender" value="true" checked="checked"/>
                    <label for="radio1" class="form-check-label">True</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="Nu"  type="radio" class="form-check-input" id="radio2" name="Gender" value="false" />
                    <label for="radio2" class="form-check-label">False</label>
                </div>
            </div>
            
            <span asp-validation-for="Nu" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="GhiChu" class="col-sm-2 col-form-label">Ghi chú</label> 
            <div class="col-sm-10">
                <div class="form-floating">
                    <input asp-for="GhiChu" class="form-control form-control-lg" id="GhiChu" placeholder="Ghi Chu"/>
                    <label for="GhiChu">Ghi chú</label>
                </div>
            </div>
            <span asp-validation-for="GhiChu" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" >Thêm học sinh</button>
            </div>
        </div>
    </form>
</div>

