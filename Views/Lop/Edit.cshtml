@{
    ViewData["Title"] = "Sửa lớp học" + ViewBag.LopId;
}
@model Lop
<div class="mx-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Edit" method="post" class="mt-3" asp-route-oldid="@ViewBag.LopId">
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="LopID" class="col-sm-3 col-form-label">Tên lớp: </label>
            <div class="col-sm-9">
                <input asp-for="LopID" class="form-control" placeholder="Tên lớp" />
            </div>
            <span asp-validation-for="LopID" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="GVCN" class="col-sm-3 col-form-label">Giáo viên chủ nhiệm: </label>
            <div class="col-sm-9">
                <input asp-for="GVCN" class="form-control" placeholder="Giáo viên chủ nhiệm" />
            </div>
            <span asp-validation-for="GVCN" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Thêm mới</button>
            </div>
        </div>
    </form>
</div>