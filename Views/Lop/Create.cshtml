@{
    ViewData["Title"] = "Thêm lớp học";
}
@model Lop
<div class="mx-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Create" method="post" class="mt-3" novalidate>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="LopID" class="col-sm-3 col-form-label">Tên lớp</label>
            <div class="col-sm-9">
                <div class="form-floating">
                    <input asp-for="LopID" class="form-control" placeholder="Tên lớp" id="1" required pattern="[A-Z0-9]{4,5}" />
                    <label for="1">Tên lớp</label>
                    <div class="invalid-feedback">Không hợp lệ!</div>

                </div>
            </div>
            <span asp-validation-for="LopID" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="GVCN" class="col-sm-3 col-form-label">Giáo viên chủ nhiệm </label>
            <div class="col-sm-9">
                <div class="form-floating">
                    <input asp-for="GVCN" class="form-control" placeholder="Giáo viên chủ nhiệm" id="2" required pattern="[A-Za-z]{4,20}" />
                    <label for="2">Giáo viên chủ nhiệm</label>
                    <div class="invalid-feedback">Không hợp lệ!</div>
                </div>
            </div>
            <span asp-validation-for="GVCN" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Thêm lớp</button>
            </div>
        </div>
    </form>
</div>
<script>
    const form = document.querySelector("form");
    form.addEventListener('submit', e => {
        if (!form.checkValidity()) {
            e.preventDefault()
        }
        form.classList.add('was-validated')
    })
</script>

